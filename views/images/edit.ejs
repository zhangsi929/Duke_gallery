<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit <%= gallery.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/gallery/<%= gallery._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="gallery[name]" value="<%= gallery.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="gallery[image]" value="<%= gallery.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="gallery[description]" value="<%= gallery.description %>">
                </div>
                <!--<div class="form-group">-->
                <!--    <label for="location">Location</label>-->
                <!--    <input class="form-control" type="text" name="gallery[location]"  value="<%= gallery.location %>">-->
                <!--</div>-->
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= gallery.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/gallery">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>